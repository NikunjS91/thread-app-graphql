generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  //this means that first_name is in database and firstName is a code value.
  firstName String @map("first_name")
  lastName String @map("last_name")
  profileImageURL String? @map("profile_image_url")
  email String @unique
  password String
  salt String
  //the above model User is then compiled in database as users with all these properties.
  @@map("users")
}